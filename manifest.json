{
    "manifest_version": 2,

    "name": "Get statics of your website visits",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.0",

    "background": {
	"page":"popup.html"
    },

    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html",
	"default_title": "Usage stats"
    },
    "permissions": [
	"activeTab",
	"tabs",
	"background",
	"notifications",
	"https://ajax.googleapis.com/"
    ]
}
